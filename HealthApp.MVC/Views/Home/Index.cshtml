@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Appointment System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .hero {
            padding: 80px 20px;
        }
    </style>
</head>
<body>


<!-- Hero Section -->
<div class="container text-center hero">
    <h1 class="display-4 text-primary fw-bold">Welcome to Dorset Hospital Appointment System</h1>
    <p class="lead text-secondary">
        Book appointments with trusted doctors and manage your health effortlessly.
    </p>

    <!-- Show this section only when the user is logged in (Handled by backend) -->
    <div id="user-actions" class="mt-4" style="display: none;">
        <a class="btn btn-primary btn-lg me-2" href="book-appointment.html">📅 Book an Appointment</a>
        <a class="btn btn-outline-secondary btn-lg" href="find-doctor.html">🔍 Find a Doctor</a>
        <a class="btn btn-danger btn-sm mt-3" href="logout.html">🚪 Logout</a>
    </div>

    <!-- Login/Register Buttons (Visible when user is NOT logged in) -->
    <div id="guest-actions" class="mt-4">
        <a class="btn btn-success btn-lg me-2" asp-area="" asp-controller = "Home" asp-action = "Login">🔑 Login</a>
        <a class="btn btn-outline-primary btn-lg" asp-area="" asp-controller = "Home" asp-action= "Register">📝 Register</a>
    </div>
</div>

<!-- Footer -->
<footer class="text-center mt-5 text-muted">
    <p>Trusted by patients and doctors. Your health, our priority.</p>
</footer>


</body>
</html>
