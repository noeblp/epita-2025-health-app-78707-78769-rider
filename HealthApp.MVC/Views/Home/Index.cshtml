@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Appointment System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(to right, #e3f2fd, #fce4ec);
            font-family: 'Segoe UI', sans-serif;
        }
        .hero {
            padding: 100px 20px;
        }

        .btn-lg {
            transition: all 0.3s ease-in-out;
        }

        .btn-lg:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .testimonials {
            background-color: #ffffffaa;
            padding: 60px 20px;
            border-top: 1px solid #dee2e6;
        }

        .testimonial-card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            padding: 20px;
            margin: 10px;
        }

        footer {
            background-color: #f1f3f5;
            padding: 20px 0;
        }

        .footer-icons i {
            margin: 0 10px;
            font-size: 1.3rem;
            color: #6c757d;
            transition: color 0.3s;
        }

        .footer-icons i:hover {
            color: #0d6efd;
        }
    </style>
</head>
<body>

<!-- Hero Section -->
<div class="container text-center hero">
    <h1 class="display-4 text-primary fw-bold">🏥 Welcome to Dorset Hospital Appointment System</h1>
    <p class="lead text-secondary">
        Book appointments with trusted doctors and manage your health effortlessly.
    </p>

    <!-- Show this section only when the user is logged in (Handled by backend) -->
    <div id="user-actions" class="mt-4" style="display: none;">
        <a class="btn btn-primary btn-lg me-2" href="book-appointment.html">📅 Book an Appointment</a>
        <a class="btn btn-outline-secondary btn-lg" href="find-doctor.html">🔍 Find a Doctor</a>
        <a class="btn btn-danger btn-sm mt-3" href="logout.html">🚪 Logout</a>
    </div>

    <!-- Login/Register Buttons (Visible when user is NOT logged in) -->
    <div id="guest-actions" class="mt-4">
        <a class="btn btn-success btn-lg me-2" asp-area="" asp-controller="Home" asp-action="Login">🔑 Login</a>
        <a class="btn btn-outline-primary btn-lg" asp-area="" asp-controller="Home" asp-action="Register">📝 Register</a>
    </div>
</div>

<!-- Testimonials Section -->
<!-- Specialties Section -->
<div class="container text-center py-5">
    <h2 class="mb-5 text-primary">🩺 Our Medical Specialties</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow rounded-4">
                <div class="card-body">
                    <i class="fas fa-heartbeat fa-2x text-danger mb-3"></i>
                    <h5 class="card-title">Cardiology</h5>
                    <p class="card-text text-muted">Comprehensive heart care by top cardiologists.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow rounded-4">
                <div class="card-body">
                    <i class="fas fa-child fa-2x text-warning mb-3"></i>
                    <h5 class="card-title">Pediatrics</h5>
                    <p class="card-text text-muted">Gentle and expert care for your little ones.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow rounded-4">
                <div class="card-body">
                    <i class="fas fa-brain fa-2x text-info mb-3"></i>
                    <h5 class="card-title">Neurology</h5>
                    <p class="card-text text-muted">Specialized treatment for brain and nerve disorders.</p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Footer -->
<footer class="text-center mt-5 text-muted">
    
    <div class="footer-icons">
        <i class="fab fa-facebook-square"></i>
        <i class="fab fa-twitter-square"></i>
        <i class="fab fa-instagram"></i>
    </div>
    <small>&copy; 2025 Dorset Hospital. All rights reserved.</small>
</footer>

</body>
</html>
