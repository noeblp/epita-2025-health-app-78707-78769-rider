@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-primary fw-bold">Welcome to the Hospital Appointment System</h1>
    <p class="lead text-secondary">
        Easily book, manage, and view appointments with our trusted healthcare professionals.
    </p>

    <div class="mt-4">
        <a class="btn btn-primary btn-lg me-2" asp-controller="Appointments" asp-action="Book">
            📅 Book an Appointment
        </a>
        <a class="btn btn-outline-secondary btn-lg" asp-controller="Doctors" asp-action="Index">
            🔍 Find a Doctor
        </a>
    </div>

    <div class="mt-5">
        <p class="text-muted">
            Learn more about building modern web apps with 
            <a href="https://learn.microsoft.com/aspnet/core" class="text-decoration-none">ASP.NET Core</a>.
        </p>
    </div>
</div>