<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Search Results - Hospital Appointment System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .results-container {
            max-width: 800px;
            margin: auto;
            margin-top: 50px;
            padding: 30px;
            background: white;
            border-radius: 15px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        }
        .results-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .doctor-list {
            list-style-type: none;
            padding: 0;
        }
        .doctor-list li {
            padding: 15px;
            border-bottom: 1px solid #ddd;
            font-size: 1.1em;
        }
        .doctor-list li:last-child {
            border-bottom: none;
        }
        .no-results {
            text-align: center;
            font-size: 1.2em;
            color: #777;
        }
    </style>
</head>
<body>

<div class="results-container">
    <div class="results-header">
        <h2 class="text-primary fw-bold">Search Results</h2>
        <p class="text-muted">Doctors matching your search criteria</p>
    </div>

    @if (ViewBag.DoctorList != null && ViewBag.DoctorList.Count > 0)
    {
        <ul class="doctor-list">
            @for (int i = 0; i < ViewBag.DoctorList.Count; i++)
            {
                <li>
                    <a href="@Url.Action("BookAppo", "Appointment", new { doctorId = @ViewBag.DoctorId[i] })"> @ViewBag.DoctorList[i], @ViewBag.DoctorId[i]</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="no-results">No doctors found.</p>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
