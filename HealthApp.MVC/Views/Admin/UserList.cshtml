@model List<hospital.Models.User.User>

<div class="container mt-5">
    <h2 class="text-center text-primary fw-bold">User List</h2>
    <p class="text-center text-muted">Click "Edit" to modify user details</p>

    <table class="table table-bordered table-striped mt-3">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <!--<th>Role</th>-->
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.user_id</td>
                <td>@user.user_last_name</td>
                <td>@user.user_email</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditUser" asp-route-userid="@user.user_id" class="btn btn-sm btn-primary">Edit</a>

                    
                        <form asp-controller="Admin" asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="user_id" value="@user.user_id" />
                            <button type="submit" class="btn btn-sm btn-danger ms-2" onclick="return confirm('Are you sure you want to delete this user?')">
                                Delete
                            </button>
                        </form>
                    
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
