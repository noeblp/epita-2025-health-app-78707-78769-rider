@{
    ViewData["Title"] = "Edit User";
    var user = ViewBag.User as Dictionary<string, object>;

    if (user == null)
    {
        <div class="alert alert-danger">Error: User not found.</div>
        return;
    }
}

<div class="container mt-5">
    <h2 class="text-center text-primary fw-bold">Edit User</h2>

    <form method="post" action="/Admin/UpdateUser">
        <input type="hidden" name="user_id" value="@user["user_id"]" />

        <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" name="user_first_name" class="form-control" value="@user["user_first_name"]" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" name="user_last_name" class="form-control" value="@user["user_last_name"]" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="user_email" class="form-control" value="@user["user_email"]" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Role</label>
            <select name="user_role" class="form-control">
                <!--#######################"" NEED MODIFICATION HERE TO MATCH THE DATABASE REQUIREMENT########################################################### -->
                <option value="Admin" selected="@(user["user_role"].ToString() == "Admin" ? "selected" : null)">Admin</option>
                <option value="Doctor" selected="@(user["user_role"].ToString() == "Doctor" ? "selected" : null)">Doctor</option>
                <option value="Patient" selected="@(user["user_role"].ToString() == "Patient" ? "selected" : null)">Patient</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Update User</button>
    </form>
</div>
