<!-- Appointment Table -->
<table class="table">
    <thead>
    <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var rdv in Model)
    {
        <tr>
            <td>@rdv.date</td>
            <td>@rdv.name</td>
            <td>
                <a href="@Url.Action("Edit", "Admin", new { id = rdv.appo_id })" class="btn btn-warning">Modify</a>
                <a href="@Url.Action("Delete", "Admin", new { id = rdv.appo_id })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
