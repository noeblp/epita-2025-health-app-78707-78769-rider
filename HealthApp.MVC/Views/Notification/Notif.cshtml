@{
    ViewData["Title"] = "Notifications";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <h2 class="text-center text-primary mb-4"><i class="bi bi-bell-fill"></i> Notification</h2>

            @if (ViewBag.Notifications != null && ViewBag.Notifications.Count > 0)
            {
                <ul class="list-group">
                    @foreach (var notif in ViewBag.Notifications)
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <i class="bi bi-chat-left-dots text-success me-2"></i>
                            <span>@notif.content</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="alert alert-warning text-center" role="alert">
                    <i class="bi bi-exclamation-circle"></i> No notifications found.
                </div>
            }
        </div>
    </div>
</div>

